# My local bin directory.
PATH=$PATH:$HOME/bin:$HOME/lib/vendor/bin:$HOME/src/git-release:$HOME/src/git-release/gitflow; export PATH
PATH=/usr/local/php5/bin:$PATH; export PATH

[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm"

TERM="xterm-color" ; export TERM

source ~/etc/dotfiles/bash/prompt

alias v="vim"
alias vr="vim -R"
alias sv="sudo vim"
alias q='exit'
alias c='clear'
alias tree='tree -C'
alias s='sudo'
alias sv='sudo vim'
alias g='grep -Hin --colour=always'

source ~/etc/dotfiles/bash/aliases

# Overide these aliases privided by the above
# aliases file. They don't play well with BSD.
alias ll="ls -lG"
alias ls="ls -G"
alias all="ls -la"
alias serve="php -S 127.0.0.1:8080"

source ~/etc/dotfiles/bash_completion/*.sh
source `brew --prefix`/Library/Contributions/brew_bash_completion.sh

PATH=$PATH:$HOME/.rvm/bin # Add RVM to PATH for scripting
